@model IEnumerable<Tags>

@{
    var user = User.Identity.Name;
}

@if (Model != null)
{
    <div class="row tags-wrapper">
        @foreach (var c in Model)
        {
            var doneLink = "'DoneTaskTag/" + c.Id + "'";
            var deleteLink = "'DeleteTaskTag/" + c.Id + "'";
            <div class="col-xs-12 tags-block @((c.Done) ? "bg-done" : "")">
                <p class="w-100">@c.Text</p>

                <div class="w-100 text-right border-top pt-2">
                    @if (!c.Done)
                    {
                        <a href="#" onclick="return handleData(@doneLink, 'PUT')" class="text-success text-decoration-none ml-2">Klar</a>
                    }
                    <a href="#" onclick="return handleData(@deleteLink, 'DELETE')" class="text-danger text-decoration-none">Radera</a>
                </div>
            </div>
        }
    </div>
}
@if (Model.Count() == 0)
{
    <div class="alert alert-info text-dark">Här finns inget ...</div>
}