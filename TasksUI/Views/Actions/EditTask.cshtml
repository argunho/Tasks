
@model TasksList
@{
    ViewData["Title"] = "Redigera uppgift";
}

<div class="header-block">

    <a href="#" class="active">Ny uppgift</a>
    <a class="btn btn-outline-secondary" href="#" onclick="history.back()">Tillbaka</a>
</div>

<form class="form-block" onsubmit="return sendData(this, 'EditTask', 'PUT')">
    <input type="hidden" name="Id" value="@Model.Id"/>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" value="@Model.Name">
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" value="@Model.Description"></textarea>
    </div>


    <div class="form-group text-right">
        <input type="submit" class="btn btn-outline-success" value="Skicka" />
    </div>
</form>

