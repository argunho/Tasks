@model TasksList
@{
    ViewData["Title"] = "Ny uppgift";
}

    <div class="header-block">

        <a href="#" class="active">Ny uppgift</a>
        <a class="btn btn-outline-secondary" href="#" onclick="history.back()">Tillbaka</a>
    </div>

<form class="form-block" onsubmit="return sendData(this, 'NewTask', 'POST')">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>


    <div class="form-group text-right">
        <input type="submit" class="btn btn-outline-success" value="Skicka" />
    </div>
</form>

